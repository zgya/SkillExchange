<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/el_fivestars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5星"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp" />
            <ImageView
                android:id="@+id/el_fivegray"
                android:layout_width="200dp"
                android:layout_height="15dp"
                android:src="@mipmap/estars_gray"
                android:layout_toRightOf="@+id/el_fivestars"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"/>
            <ImageView
                android:id="@+id/el_fiveorange"
                android:layout_width="200dp"
                android:layout_height="15dp"
                android:src="@mipmap/estars_orange"
                android:layout_toRightOf="@+id/el_fivestars"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"/>
            <TextView
                android:id="@+id/five_rates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:layout_toRightOf="@+id/el_fivegray"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="17dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="%"
                android:layout_toRightOf="@+id/five_rates"
                android:layout_marginTop="17dp"/>

            <TextView
                android:id="@+id/el_fourstars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4星"
                android:layout_below="@+id/el_fivestars"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"/>
            <ImageView
                android:id="@+id/el_fourgray"
                android:layout_width="200dp"
                android:layout_height="15dp"
                android:layout_toRightOf="@+id/el_fourstars"
                android:layout_below="@+id/el_fivestars"
                android:layout_marginTop="10dp"
                android:src="@mipmap/estars_gray"
                android:layout_marginLeft="20dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY" />
            <ImageView
                android:id="@+id/el_fourorange"
                android:layout_width="200dp"
                android:layout_height="15dp"
                android:src="@mipmap/estars_orange"
                android:layout_toRightOf="@+id/el_fourstars"
                android:layout_below="@+id/el_fivestars"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY" />
            <TextView
                android:id="@+id/four_rates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:layout_toRightOf="@+id/el_fourgray"
                android:layout_marginLeft="20dp"
                android:layout_below="@+id/five_rates"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="%"
                android:layout_toRightOf="@+id/four_rates"
                android:layout_below="@+id/five_rates"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/el_threestars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3星"
                android:layout_below="@+id/el_fourstars"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"/>
            <ImageView
                android:id="@+id/el_threegray"
                android:layout_width="200dp"
                android:layout_height="15dp"
                android:layout_toRightOf="@+id/el_threestars"
                android:layout_below="@+id/el_fourstars"
                android:layout_marginTop="10dp"
                android:src="@mipmap/estars_gray"
                android:layout_marginLeft="20dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:visibility="invisible"/>
            <ImageView
                android:id="@+id/el_threeorange"
                android:layout_width="200dp"
                android:layout_height="15dp"
                android:src="@mipmap/estars_orange"
                android:layout_toRightOf="@+id/el_threestars"
                android:layout_below="@+id/el_fourstars"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"/>
            <TextView
                android:id="@+id/three_rates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:layout_toRightOf="@+id/el_threegray"
                android:layout_marginLeft="20dp"
                android:layout_below="@+id/four_rates"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="%"
                android:layout_toRightOf="@+id/three_rates"
                android:layout_below="@+id/four_rates"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/el_twostars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2星"
                android:layout_below="@+id/el_threestars"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp" />
            <ImageView
                android:id="@+id/el_twogray"
                android:layout_width="200dp"
                android:layout_height="15dp"
                android:layout_toRightOf="@+id/el_twostars"
                android:layout_below="@+id/el_threestars"
                android:layout_marginTop="10dp"
                android:src="@mipmap/estars_gray"
                android:layout_marginLeft="20dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY" />
            <ImageView
                android:id="@+id/el_twoorange"
                android:layout_width="200dp"
                android:layout_height="15dp"
                android:src="@mipmap/estars_orange"
                android:layout_toRightOf="@+id/el_threestars"
                android:layout_below="@+id/el_threestars"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"/>
            <TextView
                android:id="@+id/two_rates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:layout_toRightOf="@+id/el_twogray"
                android:layout_marginLeft="20dp"
                android:layout_below="@+id/three_rates"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="%"
                android:layout_toRightOf="@+id/three_rates"
                android:layout_below="@+id/three_rates"
                android:layout_marginTop="10dp"/>


            <TextView
                android:id="@+id/el_onestars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1星"
                android:layout_marginLeft="20dp"
                android:layout_below="@+id/el_twostars"
                android:layout_marginTop="10dp" />
            <ImageView
                android:id="@+id/el_onegray"
                android:layout_width="200dp"
                android:layout_height="15dp"
                android:layout_toRightOf="@+id/el_twostars"
                android:layout_below="@+id/el_twostars"
                android:layout_marginTop="10dp"
                android:src="@mipmap/estars_gray"
                android:layout_marginLeft="20dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY" />
            <ImageView
                android:id="@+id/el_oneorange"
                android:layout_width="200dp"
                android:layout_height="15dp"
                android:src="@mipmap/estars_orange"
                android:layout_toRightOf="@+id/el_threestars"
                android:layout_below="@+id/el_twostars"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"/>
            <TextView
                android:id="@+id/one_rates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:layout_toRightOf="@+id/el_twogray"
                android:layout_marginLeft="20dp"
                android:layout_below="@+id/two_rates"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="%"
                android:layout_toRightOf="@+id/three_rates"
                android:layout_below="@+id/two_rates"
                android:layout_marginTop="10dp"/>
        </RelativeLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>