<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="135dp">

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="这是任务标题"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="13dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/ti_tid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tv1"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="20dp"
        android:text="1"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/ti_tstate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/ti_tid"
        android:layout_marginTop="12dp"
        android:text="012"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/daren_uidd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:layout_toRightOf="@+id/tv1"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="20dp"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/iv1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@+id/tv1"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="8dp"
        android:src="@mipmap/lv_address" />

    <TextView
        android:id="@+id/tvshouye_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv1"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="9dp"
        android:layout_toRightOf="@+id/iv1"
        android:text="US.NewYork" />

    <View
        android:id="@+id/view_mine_line2"
        android:layout_height="1dp"
        android:layout_width="fill_parent"
        android:layout_marginTop="70dp"
        android:background="#cccccc" />
    
    <ImageView
        android:id="@+id/tv_dollar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="330dp"
        android:src="@mipmap/dollar" />

    <TextView
        android:id="@+id/tv_tprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tv_dollar"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="5dp"
        android:text="50"
        android:textColor="@color/orange"/>
    <TextView
        android:id="@+id/tv_tbids"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv1"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="335dp"
        android:text="0"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tv_tbids"
        android:layout_below="@+id/tv_tprice"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="8dp"
        android:text="人竞标"/>

    <com.jit.zgy.skillexchange.view.CircleImageView
        android:id="@+id/iv_uavatar"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_below="@+id/view_mine_line2"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="18dp"
        android:src="@drawable/default_personal_image" />

    <TextView
        android:id="@+id/tv_tuname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_mine_line2"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="21dp"
        android:layout_toRightOf="@+id/iv_uavatar"
        android:text="这是发布者的名字"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="截止于"
        android:layout_below="@+id/view_mine_line2"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="23dp"/>

    <TextView
        android:id="@+id/tv_tdeadline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tv2"
        android:layout_below="@+id/view_mine_line2"
        android:layout_marginTop="23dp"
        android:text="2021-4-5 23:45"
        android:layout_marginLeft="10dp"/>

    <View
        android:id="@+id/view_mine_line3"
        android:layout_height="5dp"
        android:layout_width="fill_parent"
        android:layout_marginTop="130dp"
        android:background="#cccccc" />

</RelativeLayout>
