<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="135dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:descendantFocusability="blocksDescendants">

    <com.jit.zgy.skillexchange.view.CircleImageView
        android:id="@+id/iv_uavatardaren"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/default_personal_image"
        android:focusable="false"/>

    <com.jit.zgy.skillexchange.view.TextViewBorder
        android:id="@+id/tv_ucertificationdaren"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="未认证"
        android:layout_below="@+id/iv_uavatardaren"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="6dp"/>

    <TextView
        android:id="@+id/daren_uid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_ucertificationdaren"
        android:layout_marginLeft="50dp"
        android:text="1"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/tv_unamedaren"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stephen.Jobs"
        android:layout_toRightOf="@+id/iv_uavatardaren"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="15dp"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/iv_uskillsdaren"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:src="@mipmap/iv_uskills"
        android:layout_below="@+id/tv_unamedaren"
        android:layout_toRightOf="@+id/iv_uavatardaren"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="11dp"/>

    <TextView
        android:id="@+id/tv_uskillsdaren"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_uskillsdaren"
        android:layout_below="@+id/tv_unamedaren"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="11dp"
        android:text="达人技能"/>
    
    <ImageView
        android:id="@+id/iv_ulocationdaren"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_toRightOf="@+id/iv_uavatardaren"
        android:layout_marginLeft="15dp"
        android:layout_below="@+id/iv_uskillsdaren"
        android:layout_marginTop="12dp"
        android:src="@mipmap/iv_ulocationdaren"/>

    <TextView
        android:id="@+id/tv_uaddressdaren"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="daren's current location"
        android:layout_toRightOf="@+id/iv_ulocationdaren"
        android:layout_below="@+id/iv_uskillsdaren"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="12dp"/>

    <TextView
        android:id="@+id/tv_uprice0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="沟通后报价"
        android:layout_toRightOf="@+id/tv_unamedaren"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="130dp"
        android:textColor="@color/darkorange"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_dollarsdaren"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$"
        android:textColor="@color/darkorange"
        android:layout_toRightOf="@+id/iv_uavatardaren"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="250dp"/>

    <TextView
        android:id="@+id/tv_uprice1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10"
        android:layout_toRightOf="@+id/tv_dollarsdaren"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="5dp"
        android:textColor="@color/darkorange"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tv_uprice1"
        android:layout_marginTop="25dp"
        android:text="/小时"
        android:textColor="@color/darkorange"
        android:layout_marginLeft="2dp"/>

    <com.jit.zgy.skillexchange.view.RatingBar
        android:id="@+id/star_daren"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/tv_dollarsdaren"
        android:paddingLeft="120dp"
        android:paddingTop="13dp"
        android:layout_marginLeft="210dp"
        app:starCount="5"
        app:starEmpty="@drawable/rating_small_empty"
        app:starFill="@drawable/rating_small_full"
        app:starHalf="@drawable/rating_small_half"
        app:starImageSize="15dp"
        app:starPadding="1dp"
        app:starStep="5"
        app:stepSize="Half" />

    <TextView
        android:id="@+id/tv_neid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:layout_below="@+id/tv_dollarsdaren"
        android:layout_marginTop="41dp"
        android:layout_marginLeft="330dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="条评论"
        android:layout_toRightOf="@+id/tv_neid"
        android:layout_marginTop="85dp"
        android:layout_marginLeft="5dp"/>

    <View
        android:id="@+id/view_daren_line"
        android:layout_height="5dp"
        android:layout_width="fill_parent"
        android:layout_marginTop="130dp"
        android:background="#cccccc" />

</RelativeLayout>
