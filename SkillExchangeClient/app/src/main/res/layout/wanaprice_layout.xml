<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="25dp"
    android:layout_marginRight="25dp"
    android:layout_marginTop="20dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/tevtview"
        android:layout_marginTop="180dp">

        <TextView
            android:id="@+id/tp_tv1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/textviewtop"
            android:text="您的期望报酬"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="15dp"
            android:textColor="@color/bg_white"/>

        <TextView
            android:id="@+id/td_tprice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="任务已过期"
            android:textStyle="bold"
            android:textSize="20dp"
            android:gravity="center"
            android:visibility="gone"/>

        <EditText
            android:id="@+id/wl_wanaprice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:hint="请输入您的期望价格"
            android:drawableLeft="@mipmap/dollar1"/>

        <Button
            android:id="@+id/tp_toubiao"
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:background="@drawable/tpbutom"
            android:layout_below="@+id/wl_wanaprice"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="10dp"
            android:text="确认"
            android:textColor="@color/bg_white" />

    </RelativeLayout>
</LinearLayout>